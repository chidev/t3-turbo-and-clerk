{
  "extends": "config-tsconfig/react-library.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "cypress/", "index.tsx"],
  "exclude": ["dist", "build", "node_modules"],
  "paths": {
    "@components/*": ["src/components/*"],
    "@components": ["src/components"]
  },
  "baseUrl": ".",
  "compilerOptions": {
    "types": ["cypress", "@testing-library/cypress", "node"]
  }
}
